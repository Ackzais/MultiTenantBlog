@{
    ViewData["Title"] = "Admin Dashboard";
    var stats = ViewBag.Stats;
    var recentPosts = ViewBag.RecentPosts as List<MultiTenantBlog.Models.BlogPost>;
    var categories = ViewBag.Categories as List<MultiTenantBlog.Models.Category>;
}

<!-- Admin Dashboard Header -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h2 mb-1">
                    <i class="fas fa-tachometer-alt me-2 text-primary"></i>
                    Admin Dashboard
                </h1>
                <p class="text-muted mb-0">@ViewBag.CurrentTenant?.Name yönetim paneli</p>
            </div>
            <div>
                <a href="@Url.Action("CreatePost")" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i>Yeni Yazı Ekle
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Success/Error Messages -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger alert-dismissible fade show" role="alert">
        <i class="fas fa-exclamation-triangle me-2"></i>@TempData["ErrorMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<!-- Statistics Cards -->
<div class="row mb-4">
    <!-- Total Posts Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-primary shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                            Toplam Yazı
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @stats.TotalPosts
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-file-alt fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Published Posts Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-success shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                            Yayınlanan
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @stats.PublishedPosts
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-eye fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Draft Posts Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-warning shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-warning text-uppercase mb-1">
                            Taslak
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @stats.DraftPosts
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-edit fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Categories Card -->
    <div class="col-xl-3 col-md-6 mb-4">
        <div class="card border-left-info shadow h-100 py-2">
            <div class="card-body">
                <div class="row no-gutters align-items-center">
                    <div class="col mr-2">
                        <div class="text-xs font-weight-bold text-info text-uppercase mb-1">
                            Kategori
                        </div>
                        <div class="h5 mb-0 font-weight-bold text-gray-800">
                            @stats.TotalCategories
                        </div>
                    </div>
                    <div class="col-auto">
                        <i class="fas fa-tags fa-2x text-gray-300"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Main Content Row -->
<div class="row">
    <!-- Recent Posts Column -->
    <div class="col-lg-8 mb-4">
        <div class="card shadow">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-clock me-2"></i>Son Blog Yazıları
                </h6>
                <a href="@Url.Action("Posts")" class="btn btn-sm btn-primary">
                    Tümünü Gör <i class="fas fa-arrow-right ms-1"></i>
                </a>
            </div>
            <div class="card-body">
                @if (recentPosts != null && recentPosts.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead class="table-light">
                                <tr>
                                    <th>Başlık</th>
                                    <th>Kategori</th>
                                    <th>Durum</th>
                                    <th>Tarih</th>
                                    <th>İşlemler</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var post in recentPosts)
                                {
                                    <tr>
                                        <td>
                                            <div class="fw-bold">@post.Title</div>
                                            @if (!string.IsNullOrEmpty(post.Summary))
                                            {
                                                <small class="text-muted">
                                                    @(post.Summary.Length > 60 ? post.Summary.Substring(0, 60) + "..." : post.Summary)
                                                </small>
                                            }
                                        </td>
                                        <td>
                                            <span class="badge" style="background-color: @post.Category.Color; color: white;">
                                                @post.Category.Name
                                            </span>
                                        </td>
                                        <td>
                                            @if (post.IsPublished)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="fas fa-eye me-1"></i>Yayında
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-warning">
                                                    <i class="fas fa-edit me-1"></i>Taslak
                                                </span>
                                            }
                                        </td>
                                        <td>
                                            <small class="text-muted">
                                                @post.PublishedDate.ToString("dd/MM/yyyy")
                                            </small>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="@Url.Action("Details", "Home", new { id = post.Id })" 
                                                   class="btn btn-outline-primary btn-sm" title="Görüntüle" target="_blank">
                                                    <i class="fas fa-eye"></i>
                                                </a>
                                                <a href="@Url.Action("EditPost", new { id = post.Id })" 
                                                   class="btn btn-outline-warning btn-sm" title="Düzenle">
                                                    <i class="fas fa-edit"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-file-alt fa-3x text-muted mb-3"></i>
                        <h6 class="text-muted">Henüz blog yazısı yok</h6>
                        <a href="@Url.Action("CreatePost")" class="btn btn-primary mt-2">
                            <i class="fas fa-plus me-1"></i>İlk Yazını Ekle
                        </a>
                    </div>
                }
            </div>
        </div>
    </div>

    <!-- Categories & Quick Actions Column -->
    <div class="col-lg-4 mb-4">
        <!-- Categories Card -->
        <div class="card shadow mb-4">
            <div class="card-header py-3 d-flex justify-content-between align-items-center">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-tags me-2"></i>Kategoriler
                </h6>
                <a href="@Url.Action("Categories")" class="btn btn-sm btn-primary">Yönet</a>
            </div>
            <div class="card-body">
                @if (categories != null && categories.Any())
                {
                    @foreach (var category in categories)
                    {
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <span class="badge me-2" style="background-color: @category.Color; color: white;">
                                    @category.Name
                                </span>
                            </div>
                            <small class="text-muted">
                                @category.BlogPosts?.Count yazı
                            </small>
                        </div>
                    }
                    
                    <div class="mt-3">
                        <a href="@Url.Action("CreateCategory")" class="btn btn-outline-primary btn-sm w-100">
                            <i class="fas fa-plus me-1"></i>Yeni Kategori Ekle
                        </a>
                    </div>
                }
                else
                {
                    <div class="text-center">
                        <i class="fas fa-tags fa-2x text-muted mb-3"></i>
                        <p class="text-muted">Kategori yok</p>
                        <a href="@Url.Action("CreateCategory")" class="btn btn-primary btn-sm">
                            <i class="fas fa-plus me-1"></i>Kategori Ekle
                        </a>
                    </div>
                }
            </div>
        </div>

        <!-- Quick Actions Card -->
        <div class="card shadow">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-bolt me-2"></i>Hızlı İşlemler
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    <a href="@Url.Action("CreatePost")" class="btn btn-primary">
                        <i class="fas fa-plus me-2"></i>Yeni Blog Yazısı
                    </a>
                    <a href="@Url.Action("Posts")" class="btn btn-outline-primary">
                        <i class="fas fa-list me-2"></i>Tüm Yazılar
                    </a>
                    <a href="@Url.Action("Categories")" class="btn btn-outline-primary">
                        <i class="fas fa-tags me-2"></i>Kategori Yönetimi
                    </a>
                    <a href="@Url.Action("Index", "Home")" class="btn btn-outline-success" target="_blank">
                        <i class="fas fa-external-link-alt me-2"></i>Blog'u Görüntüle
                    </a>
                </div>

                <!-- Tenant Info -->
                <div class="mt-4 pt-3 border-top">
                    <h6 class="text-muted mb-2">Blog Bilgileri</h6>
                    <small class="text-muted d-block">
                        <strong>Domain:</strong> @ViewBag.CurrentTenant?.Domain
                    </small>
                    <small class="text-muted d-block">
                        <strong>Tema:</strong> @ViewBag.CurrentTenant?.Theme
                    </small>
                    <small class="text-muted d-block">
                        <strong>Oluşturma:</strong> @ViewBag.CurrentTenant?.CreatedDate.ToString("dd/MM/yyyy")
                    </small>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Dashboard'da otomatik refresh için (opsiyonel)
        document.addEventListener('DOMContentLoaded', function() {
            // İstatistikleri her 30 saniyede bir güncelle (opsiyonel)
            // setInterval(refreshStats, 30000);
            
            // Alert'ları otomatik kapat
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(alert => {
                setTimeout(() => {
                    const closeButton = alert.querySelector('.btn-close');
                    if (closeButton) {
                        closeButton.click();
                    }
                }, 5000);
            });
        });

        // İstatistikleri güncelle (AJAX ile)
        function refreshStats() {
            fetch('@Url.Action("GetStats")')
                .then(response => response.json())
                .then(data => {
                    if (!data.error) {
                        // İstatistik kartlarını güncelle
                        console.log('Stats updated:', data);
                        // UI güncelleme kodları buraya eklenebilir
                    }
                })
                .catch(error => console.error('Error:', error));
        }

        // Kart hover efekti
        const cards = document.querySelectorAll('.card');
        cards.forEach(card => {
            card.addEventListener('mouseenter', function() {
                this.style.transform = 'translateY(-2px)';
                this.style.transition = 'all 0.3s ease';
            });
            
            card.addEventListener('mouseleave', function() {
                this.style.transform = 'translateY(0)';
            });
        });
    </script>

    <style>
        /* Dashboard özel stilleri */
        .border-left-primary {
            border-left: 0.25rem solid #4e73df !important;
        }
        
        .border-left-success {
            border-left: 0.25rem solid #1cc88a !important;
        }
        
        .border-left-warning {
            border-left: 0.25rem solid #f6c23e !important;
        }
        
        .border-left-info {
            border-left: 0.25rem solid #36b9cc !important;
        }
        
        .text-xs {
            font-size: 0.7rem;
        }
        
        .card {
            transition: all 0.3s ease;
        }
        
        .table th {
            border-top: none;
            font-weight: 600;
            font-size: 0.9rem;
            color: #5a5c69;
        }
        
        .badge {
            font-size: 0.75rem;
        }
        
        .btn-group-sm .btn {
            padding: 0.25rem 0.5rem;
            font-size: 0.8rem;
        }
    </style>
}