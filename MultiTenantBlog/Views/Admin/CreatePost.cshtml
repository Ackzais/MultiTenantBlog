@model MultiTenantBlog.Models.BlogPost
@{
    ViewData["Title"] = "Yeni Blog Yazısı";
}

<!-- Page Header -->
<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h1 class="h2 mb-1">
                    <i class="fas fa-plus me-2 text-success"></i>
                    Yeni Blog Yazısı
                </h1>
                <p class="text-muted mb-0">Yeni bir blog yazısı oluşturun ve yayınlayın</p>
            </div>
            <div>
                <a href="@Url.Action("Posts")" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Yazılar Listesi
                </a>
                <a href="@Url.Action("Index")" class="btn btn-outline-primary">
                    <i class="fas fa-tachometer-alt me-1"></i>Dashboard
                </a>
            </div>
        </div>
    </div>
</div>

<!-- Form Container -->
<div class="row">
    <div class="col-lg-8">
        <!-- Main Content Form -->
        <div class="card shadow mb-4">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-edit me-2"></i>Yazı İçeriği
                </h6>
            </div>
            <div class="card-body">
                <form asp-action="CreatePost" method="post" id="createPostForm">
                    @Html.AntiForgeryToken()
                    
                    <!-- Title Field -->
                    <div class="mb-4">
                        <label asp-for="Title" class="form-label">
                            <i class="fas fa-heading me-1"></i>Yazı Başlığı <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Title" class="form-control form-control-lg" 
                               placeholder="Harika bir başlık yazın..." 
                               maxlength="200" id="titleInput">
                        <span asp-validation-for="Title" class="text-danger"></span>
                        <div class="form-text">
                            <span id="titleCounter">0</span>/200 karakter
                        </div>
                    </div>

                    <!-- Summary Field -->
                    <div class="mb-4">
                        <label asp-for="Summary" class="form-label">
                            <i class="fas fa-align-left me-1"></i>Özet
                        </label>
                        <textarea asp-for="Summary" class="form-control" rows="3" 
                                  placeholder="Yazının kısa bir özetini yazın (isteğe bağlı)..."
                                  maxlength="500" id="summaryInput"></textarea>
                        <span asp-validation-for="Summary" class="text-danger"></span>
                        <div class="form-text">
                            <span id="summaryCounter">0</span>/500 karakter. Boş bırakılırsa içerikten otomatik oluşturulur.
                        </div>
                    </div>

                    <!-- Content Field -->
                    <div class="mb-4">
                        <label asp-for="Content" class="form-label">
                            <i class="fas fa-file-text me-1"></i>İçerik <span class="text-danger">*</span>
                        </label>
                        <div class="content-editor-toolbar mb-2">
                            <div class="btn-group btn-group-sm" role="group">
                                <button type="button" class="btn btn-outline-secondary" onclick="formatText('bold')" title="Kalın">
                                    <i class="fas fa-bold"></i>
                                </button>
                                <button type="button" class="btn btn-outline-secondary" onclick="formatText('italic')" title="İtalik">
                                    <i class="fas fa-italic"></i>
                                </button>
                                <button type="button" class="btn btn-outline-secondary" onclick="formatText('underline')" title="Altı çizgili">
                                    <i class="fas fa-underline"></i>
                                </button>
                            </div>
                            <div class="btn-group btn-group-sm ms-2" role="group">
                                <button type="button" class="btn btn-outline-secondary" onclick="insertHeading('h2')" title="Büyük Başlık">
                                    <i class="fas fa-heading"></i> H2
                                </button>
                                <button type="button" class="btn btn-outline-secondary" onclick="insertHeading('h3')" title="Orta Başlık">
                                    <i class="fas fa-heading"></i> H3
                                </button>
                            </div>
                            <div class="btn-group btn-group-sm ms-2" role="group">
                                <button type="button" class="btn btn-outline-secondary" onclick="insertList('ul')" title="Madde listesi">
                                    <i class="fas fa-list-ul"></i>
                                </button>
                                <button type="button" class="btn btn-outline-secondary" onclick="insertList('ol')" title="Numaralı liste">
                                    <i class="fas fa-list-ol"></i>
                                </button>
                            </div>
                            <div class="btn-group btn-group-sm ms-2" role="group">
                                <button type="button" class="btn btn-outline-secondary" onclick="insertLink()" title="Link ekle">
                                    <i class="fas fa-link"></i>
                                </button>
                            </div>
                        </div>
                        <textarea asp-for="Content" class="form-control content-editor" rows="15" 
                                  placeholder="Yazınızın içeriğini buraya yazın. HTML etiketleri kullanabilirsiniz..."
                                  id="contentInput"></textarea>
                        <span asp-validation-for="Content" class="text-danger"></span>
                        <div class="form-text">
                            HTML etiketleri desteklenir. Basit formatlama için yukarıdaki araç çubuğunu kullanabilirsiniz.
                        </div>
                    </div>

                    <!-- Author Field -->
                    <div class="mb-4">
                        <label asp-for="Author" class="form-label">
                            <i class="fas fa-user me-1"></i>Yazar
                        </label>
                        <input asp-for="Author" class="form-control" 
                               placeholder="Yazar adı..." value="Admin"
                               maxlength="100">
                        <span asp-validation-for="Author" class="text-danger"></span>
                    </div>
                </form>
            </div>
        </div>

        <!-- Preview Card -->
        <div class="card shadow" id="previewCard" style="display: none;">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-info">
                    <i class="fas fa-eye me-2"></i>Önizleme
                </h6>
            </div>
            <div class="card-body">
                <div id="previewContent">
                    <!-- Preview content will be inserted here -->
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Publish Settings -->
        <div class="card shadow mb-4">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-primary">
                    <i class="fas fa-cog me-2"></i>Yayın Ayarları
                </h6>
            </div>
            <div class="card-body">
                <!-- Category Selection -->
                <div class="mb-3">
                    <label for="CategoryId" class="form-label">
                        <i class="fas fa-tag me-1"></i>Kategori <span class="text-danger">*</span>
                    </label>
                    <select asp-for="CategoryId" class="form-select" id="categorySelect">
                        <option value="">Kategori seçin...</option>
                        @if (ViewBag.Categories != null)
                        {
                            foreach (var category in ViewBag.Categories)
                            {
                                <option value="@category.Id">@category.Name</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                    
                    @if (ViewBag.Categories == null || !ViewBag.Categories.Any())
                    {
                        <div class="alert alert-warning mt-2">
                            <i class="fas fa-exclamation-triangle me-1"></i>
                            <small>
                                Henüz kategori yok. 
                                <a href="@Url.Action("CreateCategory")" target="_blank">Yeni kategori ekleyin</a>
                            </small>
                        </div>
                    }
                </div>

                <!-- Publish Status -->
                <div class="mb-3">
                    <div class="form-check form-switch">
                        <input class="form-check-input" type="checkbox" asp-for="IsPublished" id="publishSwitch" checked>
                        <label class="form-check-label" for="publishSwitch">
                            <i class="fas fa-eye me-1"></i>
                            <span id="publishLabel">Hemen yayınla</span>
                        </label>
                    </div>
                    <div class="form-text">
                        <small id="publishHelp">Yazı kaydedildikten sonra anında yayınlanacak</small>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="d-grid gap-2">
                    <button type="submit" form="createPostForm" class="btn btn-success">
                        <i class="fas fa-save me-1"></i>
                        <span id="saveButtonText">Kaydet ve Yayınla</span>
                    </button>
                    <button type="button" class="btn btn-info" onclick="togglePreview()">
                        <i class="fas fa-eye me-1"></i>Önizleme
                    </button>
                    <button type="button" class="btn btn-secondary" onclick="saveDraft()">
                        <i class="fas fa-file me-1"></i>Taslak Olarak Kaydet
                    </button>
                </div>
            </div>
        </div>

        <!-- Writing Tips -->
        <div class="card shadow mb-4">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-success">
                    <i class="fas fa-lightbulb me-2"></i>Yazım İpuçları
                </h6>
            </div>
            <div class="card-body">
                <div class="tip-item mb-3">
                    <h6 class="tip-title">
                        <i class="fas fa-heading text-primary me-1"></i>Güçlü Başlık
                    </h6>
                    <small class="text-muted">
                        Okuyucuların ilgisini çekecek, net ve açıklayıcı başlıklar yazın.
                    </small>
                </div>
                
                <div class="tip-item mb-3">
                    <h6 class="tip-title">
                        <i class="fas fa-paragraph text-info me-1"></i>Kısa Paragraflar
                    </h6>
                    <small class="text-muted">
                        Okunabilirlik için paragrafları kısa tutun (3-4 cümle).
                    </small>
                </div>
                
                <div class="tip-item mb-3">
                    <h6 class="tip-title">
                        <i class="fas fa-list text-warning me-1"></i>Alt Başlıklar
                    </h6>
                    <small class="text-muted">
                        H2, H3 başlıkları ile içeriği organize edin.
                    </small>
                </div>
                
                <div class="tip-item">
                    <h6 class="tip-title">
                        <i class="fas fa-search text-success me-1"></i>SEO Dostu
                    </h6>
                    <small class="text-muted">
                        Anahtar kelimeleri doğal şekilde kullanın.
                    </small>
                </div>
            </div>
        </div>

        <!-- Quick Stats -->
        <div class="card shadow">
            <div class="card-header">
                <h6 class="m-0 font-weight-bold text-info">
                    <i class="fas fa-chart-line me-2"></i>Yazı İstatistikleri
                </h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <small class="text-muted">Kelime sayısı:</small>
                    <small class="fw-bold" id="wordCount">0</small>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <small class="text-muted">Karakter sayısı:</small>
                    <small class="fw-bold" id="charCount">0</small>
                </div>
                <div class="d-flex justify-content-between mb-2">
                    <small class="text-muted">Tahmini okuma süresi:</small>
                    <small class="fw-bold" id="readTime">0 dk</small>
                </div>
                <div class="progress mt-2" style="height: 6px;">
                    <div class="progress-bar bg-info" id="contentProgress" style="width: 0%"></div>
                </div>
                <small class="text-muted">Optimal: 300-800 kelime</small>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- Form Validation -->
    <partial name="_ValidationScriptsPartial" />
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Character counters
            setupCharacterCounters();
            
            // Content statistics
            updateContentStats();
            
            // Publish switch handler
            setupPublishSwitch();
            
            // Auto-save functionality (every 30 seconds)
            // setInterval(autoSave, 30000);
            
            // Form validation
            setupFormValidation();
        });

        // Character counters
        function setupCharacterCounters() {
            const titleInput = document.getElementById('titleInput');
            const summaryInput = document.getElementById('summaryInput');
            const titleCounter = document.getElementById('titleCounter');
            const summaryCounter = document.getElementById('summaryCounter');

            titleInput.addEventListener('input', function() {
                titleCounter.textContent = this.value.length;
                updateContentStats();
            });

            summaryInput.addEventListener('input', function() {
                summaryCounter.textContent = this.value.length;
            });
        }

        // Content statistics
        function updateContentStats() {
            const content = document.getElementById('contentInput').value;
            const title = document.getElementById('titleInput').value;
            
            // Remove HTML tags for word count
            const plainText = content.replace(/<[^>]*>/g, '').trim();
            const words = plainText ? plainText.split(/\s+/).length : 0;
            const chars = plainText.length;
            const readTime = Math.max(1, Math.ceil(words / 200)); // 200 words per minute

            document.getElementById('wordCount').textContent = words;
            document.getElementById('charCount').textContent = chars;
            document.getElementById('readTime').textContent = readTime + ' dk';

            // Progress bar (optimal: 300-800 words)
            const progress = Math.min(100, (words / 800) * 100);
            document.getElementById('contentProgress').style.width = progress + '%';
        }

        // Content editor event listener
        document.getElementById('contentInput').addEventListener('input', updateContentStats);

        // Publish switch
        function setupPublishSwitch() {
            const publishSwitch = document.getElementById('publishSwitch');
            const publishLabel = document.getElementById('publishLabel');
            const publishHelp = document.getElementById('publishHelp');
            const saveButtonText = document.getElementById('saveButtonText');

            publishSwitch.addEventListener('change', function() {
                if (this.checked) {
                    publishLabel.innerHTML = '<i class="fas fa-eye me-1"></i>Hemen yayınla';
                    publishHelp.textContent = 'Yazı kaydedildikten sonra anında yayınlanacak';
                    saveButtonText.textContent = 'Kaydet ve Yayınla';
                } else {
                    publishLabel.innerHTML = '<i class="fas fa-eye-slash me-1"></i>Taslak olarak kaydet';
                    publishHelp.textContent = 'Yazı taslak olarak kaydedilecek, daha sonra yayınlayabilirsiniz';
                    saveButtonText.textContent = 'Taslak Olarak Kaydet';
                }
            });
        }

        // Simple text formatting functions
        function formatText(command) {
            const textarea = document.getElementById('contentInput');
            const start = textarea.selectionStart;
            const end = textarea.selectionEnd;
            const selectedText = textarea.value.substring(start, end);
            
            if (!selectedText) {
                alert('Lütfen formatlamak istediğiniz metni seçin');
                return;
            }

            let replacement = '';
            switch(command) {
                case 'bold':
                    replacement = `<strong>${selectedText}</strong>`;
                    break;
                case 'italic':
                    replacement = `<em>${selectedText}</em>`;
                    break;
                case 'underline':
                    replacement = `<u>${selectedText}</u>`;
                    break;
            }

            textarea.value = textarea.value.substring(0, start) + replacement + textarea.value.substring(end);
            textarea.focus();
            updateContentStats();
        }

        function insertHeading(level) {
            const textarea = document.getElementById('contentInput');
            const start = textarea.selectionStart;
            const end = textarea.selectionEnd;
            const selectedText = textarea.value.substring(start, end) || 'Başlık metni';
            
            const replacement = `<${level}>${selectedText}</${level}>\n`;
            textarea.value = textarea.value.substring(0, start) + replacement + textarea.value.substring(end);
            textarea.focus();
            updateContentStats();
        }

        function insertList(type) {
            const textarea = document.getElementById('contentInput');
            const start = textarea.selectionStart;
            const listItems = '<li>Liste öğesi 1</li>\n<li>Liste öğesi 2</li>\n<li>Liste öğesi 3</li>';
            const replacement = `<${type}>\n${listItems}\n</${type}>\n`;
            
            textarea.value = textarea.value.substring(0, start) + replacement + textarea.value.substring(start);
            textarea.focus();
            updateContentStats();
        }

        function insertLink() {
            const url = prompt('Link URL\'sini girin:');
            const text = prompt('Link metni:') || url;
            
            if (url) {
                const textarea = document.getElementById('contentInput');
                const start = textarea.selectionStart;
                const replacement = `<a href="${url}" target="_blank">${text}</a>`;
                
                textarea.value = textarea.value.substring(0, start) + replacement + textarea.value.substring(start);
                textarea.focus();
                updateContentStats();
            }
        }

        // Preview functionality
        function togglePreview() {
            const previewCard = document.getElementById('previewCard');
            const previewContent = document.getElementById('previewContent');
            
            if (previewCard.style.display === 'none' || previewCard.style.display === '') {
                // Show preview
                const title = document.getElementById('titleInput').value || 'Başlık girilmedi';
                const content = document.getElementById('contentInput').value || 'İçerik girilmedi';
                const author = document.querySelector('input[name="Author"]').value || 'Anonim';
                
                previewContent.innerHTML = `
                    <h2 class="mb-3">${title}</h2>
                    <div class="mb-3">
                        <small class="text-muted">
                            <i class="fas fa-user me-1"></i>${author} • 
                            <i class="fas fa-calendar me-1"></i>${new Date().toLocaleDateString('tr-TR')}
                        </small>
                    </div>
                    <div class="content-preview">${content}</div>
                `;
                previewCard.style.display = 'block';
                previewCard.scrollIntoView({ behavior: 'smooth' });
            } else {
                // Hide preview
                previewCard.style.display = 'none';
            }
        }

        // Save as draft
        function saveDraft() {
            document.getElementById('publishSwitch').checked = false;
            document.getElementById('createPostForm').submit();
        }

        // Form validation
        function setupFormValidation() {
            document.getElementById('createPostForm').addEventListener('submit', function(e) {
                const title = document.getElementById('titleInput').value.trim();
                const content = document.getElementById('contentInput').value.trim();
                const category = document.getElementById('categorySelect').value;
                
                if (!title) {
                    alert('Lütfen yazı başlığını girin');
                    e.preventDefault();
                    document.getElementById('titleInput').focus();
                    return;
                }
                
                if (!content) {
                    alert('Lütfen yazı içeriğini girin');
                    e.preventDefault();
                    document.getElementById('contentInput').focus();
                    return;
                }
                
                if (!category) {
                    alert('Lütfen bir kategori seçin');
                    e.preventDefault();
                    document.getElementById('categorySelect').focus();
                    return;
                }

                // Show loading state
                const submitBtn = document.querySelector('button[type="submit"]');
                submitBtn.innerHTML = '<i class="fas fa-spinner fa-spin me-1"></i>Kaydediliyor...';
                submitBtn.disabled = true;
            });
        }

        // Auto-save function (commented out by default)
        function autoSave() {
            const title = document.getElementById('titleInput').value;
            const content = document.getElementById('contentInput').value;
            
            if (title || content) {
                console.log('Auto-save triggered...'); // Implement actual auto-save logic here
            }
        }
    </script>

    <style>
        .content-editor {
            font-family: 'Monaco', 'Courier New', monospace;
            font-size: 14px;
            line-height: 1.5;
        }
        
        .content-editor-toolbar {
            background-color: #f8f9fa;
            padding: 0.75rem;
            border: 1px solid #dee2e6;
            border-radius: 0.375rem;
        }
        
        .tip-item {
            border-left: 3px solid #e9ecef;
            padding-left: 0.75rem;
        }
        
        .tip-title {
            font-size: 0.9rem;
            margin-bottom: 0.25rem;
        }
        
        .content-preview {
            line-height: 1.8;
        }
        
        .content-preview h2, .content-preview h3 {
            color: #333;
            margin-top: 1.5rem;
            margin-bottom: 1rem;
        }
        
        .content-preview ul, .content-preview ol {
            margin-bottom: 1rem;
            padding-left: 2rem;
        }
        
        .form-control:focus {
            border-color: #80bdff;
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }
        
        .card {
            box-shadow: 0 0.15rem 1.75rem 0 rgba(58, 59, 69, 0.15);
            border: none;
        }
        
        .progress {
            background-color: #e9ecef;
        }
    </style>
}